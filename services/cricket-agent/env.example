# Cricket Agent Environment Variables
# Copy this file to .env and update with your values

# Application Environment
APP_ENV=dev
PORT=8080

# Google Cloud Configuration
GCP_PROJECT=your-project-id
REGION=australia-southeast1
VERTEX_LOCATION=australia-southeast1

# AI Models
VERTEX_MODEL=gemini-1.5-flash
EMBED_MODEL=text-embedding-005

# PlayHQ Configuration
PLAYHQ_MODE=public
VECTOR_BACKEND=vertex_rag

# Secret References
# For production: use Secret Manager references
# For local dev: use raw values (not recommended for production)

# PlayHQ API Key
SECRET_PLAYHQ_API_KEY=projects/your-project-id/secrets/PLAYHQ_API_KEY/versions/latest
# For local dev: SECRET_PLAYHQ_API_KEY=your-actual-api-key

# CSCC IDs Bundle (JSON format)
SECRET_IDS_BUNDLE=projects/your-project-id/secrets/CSCC_IDS/versions/latest
# For local dev: SECRET_IDS_BUNDLE={"tenant":"ca","org_id":"<guid>","season_id":"<guid>","grade_id":"<guid>","teams":[{"name":"Caroline Springs Blue U10","team_id":"<guid>"},{"name":"Caroline Springs White U10","team_id":"<guid>"}]}

# Internal Authentication Token
SECRET_INTERNAL_TOKEN=projects/your-project-id/secrets/CRICKET_INTERNAL_TOKEN/versions/latest
# For local dev: SECRET_INTERNAL_TOKEN=your-internal-token

# Private Mode Token (only required if PLAYHQ_MODE=private)
SECRET_PLAYHQ_PRIVATE_TOKEN=projects/your-project-id/secrets/PLAYHQ_PRIVATE_TOKEN/versions/latest
# For local dev: SECRET_PLAYHQ_PRIVATE_TOKEN=your-private-token

# GCS Configuration (optional)
GCS_BUCKET=your-cricket-data-bucket
# For local dev: leave unset to use /tmp storage

# Sync Configuration (optional)
MATCH_DAYS=Fri,Sat
RECENT_COMPLETED_LIMIT=5
